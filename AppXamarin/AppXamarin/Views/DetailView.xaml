<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppXamarin.Views.DetailView">
    <ScrollView>
      <StackLayout Padding="10">
        <Image Source="{Binding CityImage}" Aspect="AspectFill" />
        <Label Text="{Binding CityName}" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
        <Button x:Name="BotonMaps" Text="Ver en Maps" />
        <Label Text="{Binding CityDescription}" />
      </StackLayout>
    </ScrollView>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppXamarin.Views.NewView">
  <StackLayout>
    <Entry Placeholder="Nombre de la ciudad" Text="{Binding CityNombre, Mode=TwoWay}" />
    <Entry Placeholder="Descripción de la ciudad" Text="{Binding CityDescripcion, Mode=TwoWay}" />
    <Button Text="Añadir ciudad" Command="{Binding CmdCrear}"/>
    <Button Text="Cancelar" Command="{Binding CmdCancelar}"/>
  </StackLayout>
</ContentPage>